<Page x:Class="WpfApp2.Views.UserAddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Пользователь">

    <Grid Background="FloralWhite">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <TextBlock Text="Логин" FontSize="16"/>
            <TextBox Text="{Binding Login}" FontSize="16"/>
            <TextBlock Text="Имя" FontSize="16"/>
            <TextBox Text="{Binding Name}" FontSize="16"/>
            <Label FontSize="16" Padding="0">Роль</Label>
            <ComboBox SelectedItem="{Binding RoleId}" x:Name="ComboRoles" DisplayMemberPath="Name"></ComboBox>
            <TextBlock Text="Пароль" FontSize="16"/>
            <TextBox Text="{Binding Password}" FontSize="16"/>

            <Button Background="Beige" Height="20" Margin="0 5" Content="Сохранить" Click="BtnSave_Click" FontSize="13"/>
        </StackPanel>
    </Grid>
</Page>
