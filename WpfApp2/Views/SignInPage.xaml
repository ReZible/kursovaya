<Page x:Class="WpfApp2.Views.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid Background="FloralWhite">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <TextBlock Height="30" Text="Логин" FontSize="16"/>
            <TextBox Height="30" Name="TxbLogin" FontSize="16" PreviewKeyDown="textBox_PreviewKeyDown"/>
            <TextBlock Height="30" Text="Пароль" FontSize="16"/>
            <PasswordBox Height="30" Name="TxbPassword" FontSize="16" PreviewKeyDown="textBox_PreviewKeyDown"/>

            <Button Background="Beige" Height="30" Margin="0 15" Content="Войти" Click="BtnSignIn_Click" FontSize="16"/>
            <TextBlock  Height="50" TextAlignment="Center" TextWrapping="Wrap">
                <Hyperlink Click="BtnRegister_Click" FontSize="16" Foreground="Black" >
                   Нет аккаунта? Зарегестрироваться
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
