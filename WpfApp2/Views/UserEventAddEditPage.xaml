<Page x:Class="WpfApp2.Views.UserEventAddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserEventAddEditPage">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <TextBlock Text="Название" FontSize="16"/>
            <TextBox Text="{Binding Name}" FontSize="16"/>

            <Label FontSize="16" Padding="0">Тип</Label>
            <ComboBox SelectedItem="{Binding EventType}" x:Name="ComboEventType" DisplayMemberPath="Type"></ComboBox>
            <Label FontSize="16" Padding="0">Статус</Label>
            <ComboBox SelectedItem="{Binding EventStatus}" x:Name="ComboEventStatus" DisplayMemberPath="Status"></ComboBox>
            <TextBlock Text="Изображение" FontSize="16"/>
            <TextBox Text="{Binding Img}" FontSize="16"/>
            <TextBlock Text="Описание" FontSize="16"/>
            <TextBox Text="{Binding Description}" FontSize="16"/>

            <Button Height="20" Margin="5" Content="Сохранить" Click="BtnSave_Click" FontSize="13"/>
        </StackPanel>
    </Grid>
</Page>
